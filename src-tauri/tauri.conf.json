{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "schreiber",
  "version": "0.0.2",
  "identifier": "com.outils.schreiber",
  "build": {
    "beforeDevCommand": "deno run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno run forge",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Schreiber",
        "width": 600,
        "height": 800,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
    "plugins": {
    "cli": {
      "description": "Tauri CLI Plugin Example",
      "args": [
        {
      "name": "source",
      "index": 1,
      "takesValue": true
    },
    {
      "name": "destination",
      "index": 2,
      "takesValue": true
    },
        {
          "short": "v",
          "name": "verbose",
          "description": "Verbosity level"
        }
      ],
      "subcommands": {
        "run": {
          "description": "Run the application",
          "args": [
    {
      "name": "source",
      "index": 1,
      "takesValue": true
    },
    {
      "name": "destination",
      "index": 2,
      "takesValue": true
    }
  ]
        }
      }
    }
  }
}
