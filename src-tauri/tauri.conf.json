{
	"$schema": "https://schema.tauri.app/config/2.0.0",
	"productName": "schreiber-b6",
	"version": "1.2.0",
	"identifier": "com.schloosser.techne.schreiber-b6",
	"build": {
		"beforeDevCommand": "deno run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "deno run forge",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"title": "Schreiber",
				"width": 600,
				"height": 800,
				"decorations": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"fileAssociations": [
			{
				"ext": ["csv"],
				"mimeType": "text/*"
			},
			{
				"ext": ["md"],
				"mimeType": "text/markdown"
			},
			{
				"ext": ["tex"],
				"mimeType": "application/x-tex"
			}
		]
	},
	"plugins": {
		"cli": {
			"description": "Schreiber-B6 CLI Plugin",
			"longDescription": "",
			"beforeHelp": "",
			"afterHelp": "",
			"args": [
				{
					"name": "dateipfad",
					"index": 1,
					"takesValue": true
				}
			]
		}
	}
}
